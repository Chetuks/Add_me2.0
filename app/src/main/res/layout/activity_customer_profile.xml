<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whiteback"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        card_view:cardCornerRadius="15dp"
        card_view:contentPadding="4dp"
        app:cardBackgroundColor="#318CE7"
        android:clickable="true"
        app:cardMaxElevation="15dp"
        android:layout_margin="15dp">
        <ImageView
            android:id="@+id/imageViewid"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/rounded"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/custNameid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:hint="CustomerName"/>
        <TextView
            android:id="@+id/custNameidbelow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:text="CustomerName"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/custMobileid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="10dp"
            android:hint="Mobile Number"/>

        <TextView
            android:id="@+id/custMobileidbelow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="Mobile Number"/>
        <TextView
            android:id="@+id/custCardPointsid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:textAlignment="center"
            android:hint="Card Points"/>

        <TextView
            android:id="@+id/custCardPointsidbelow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Card Points"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase History"
        android:id="@+id/midtextview"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@id/card_view"
        android:layout_marginLeft="10dp"/>


    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/midtextview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/historyListView"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/home_page_footer"/>
</RelativeLayout>
