<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:backgroundTint="#E7FEFF"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="SuccessTop"
            android:gravity="start"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="SuccessTopMiddle"
            android:id="@+id/SuccessTopMiddle_id"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="SuccessTopEnd"
            android:gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="SuccessBelow"
            android:gravity="start"
            android:id="@+id/status"
            android:layout_margin="5dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="SuccessBelowMiddle"
            android:gravity="center"
            android:id="@+id/amount"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="SuccessBelowEnd"
            android:gravity="end"
            android:id="@+id/date"
            android:layout_margin="5dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>