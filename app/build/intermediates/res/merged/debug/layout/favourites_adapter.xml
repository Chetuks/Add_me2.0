<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="205dp"
    android:layout_height="230dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="2dp"
    android:background="#fff">


    <!-- <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
         android:id="@+id/card_view"
         android:layout_width="200dp"
         android:layout_height="200dp"
         android:layout_margin="3dp"
         card_view:cardCornerRadius="10dp">-->

    <LinearLayout
        android:id="@+id/event_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/grid_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="#7af1f1f1"
                android:gravity="center">

                <TextView
                    android:id="@+id/organizationinside_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/archivo_black"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:text="hsgfsdgfgd"
                    android:textAllCaps="true"
                    android:textColor="#080808"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true">

                <com.like.LikeButton
                    android:id="@+id/wishlist_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_btn_background_double"
                    app:icon_type="heart" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="190dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="#000"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingEnd="0dp"
                android:paddingStart="5dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/grid_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/yantramanav_light"
                    android:gravity="start"
                    android:text="Products description"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/grid_text_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/yantramanav_light"
                    android:gravity="start"
                    android:text="Validity"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/mappingbutton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/location"
                            android:visibility="visible" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1Km"
                        android:textColor="#000"
                        android:textSize="10sp" />


                </LinearLayout>

                <!-- <com.like.LikeButton
                     android:id="@+id/wishlist_id"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_weight="1"
                     app:icon_type="heart"
                     android:visibility="gone"/>-->
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!--  </android.support.v7.widget.CardView>-->

</RelativeLayout>
